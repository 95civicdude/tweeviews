  body
    div(style="height: 80px;")
      //
              Fixing height for the fixed global header.
              
    .navbar.navbar-portal.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.btn.btn-small.pull-left(href="#")
            i.icon-list
          a.brand.brand-bv(href="#")
            span.visuallyhidden Bazaarvoice:
          p.navbar-text.pull-right
            .btn-group.pull-right
              a.btn.btn-small.dropdown-toggle(data-toggle="dropdown", href="#")
                i.icon-user
                span.caret
              ul.dropdown-menu
                li
                  select
                    option client1
                    option client2
                li
                  a.btn(href="#")
                    i.icon-cog
                    | Preferences
                li
                  a.btn(href="#")
                    i.icon-power
                    | Sign out
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href="/demo") Tweeviews
          .nav-collapse.collapse
            ul.nav
              li
                a(href="/demo") Demo
              li.active
                a(href="/clients") Provision
              li
                a(href="/campaigns") Campaigns
              li
                a(href="/releasenotes") Release Notes
          // /.nav-collapse
    .container
      form.tvclients(method='post', action='/clients/create')
        div.form-fieldset-basicinfo
          legend Basic Info
          fieldset
              label Client Name
                  input(type='text', name='name', placeholder='jeffs-testcompany')
              label API Key
                  input(type='text', name='apiKey', placeholder='m6alb4h78ttx8d9rznzmxsqw1') 
              label Encoding Key
                  input(type='text', name='encodingKey', placeholder='UwfUTFe5fTHSSwevPfS5IxrDm')
        div.form-fieldset-twitterinfo
          legend Twitter Info
          fieldset
              label Twitter Handle
                  input(type='text', name='twitterHandle', placeholder='tshackathon')
              label Consumer Key
                  input(type='text', name='consumerKey')
              label Consumer Secret
                  input(type='text', name='consumerSecret')
              label Access Token Key
                  input(type='text', name='accessTokenKey')
              label Access Token Secret
                  input(type='text', name='accessTokenSecret')
          br
          input(type='submit', value='SUBMIT')
    // /container
