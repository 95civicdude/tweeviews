    div(style="height: 80px;")
      // Fixing height for the fixed global header.              
    .navbar.navbar-portal.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.btn.btn-small.pull-left(href="#")
            i.icon-list
